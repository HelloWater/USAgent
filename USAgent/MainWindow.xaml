<Window x:Class="USAgent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300" WindowStyle="None"
        Background="{x:Null}" AllowsTransparency="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Border CornerRadius="5" Margin="0" BorderThickness="1"  BorderBrush="Green" Opacity="0.6">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="LightBlue" BlurRadius="3"/>
            </Border.Effect>
            <Border Background="Black" Opacity="0.6" Margin="20" CornerRadius="3"/>
        </Border>
        <Grid MouseDown="Window_MouseDown">
            <Image Name="switchicon" Width="200" Height="200" Source="/Images/quit.png" MouseDown="StartOrStop"/>
        </Grid>
    </Grid>
</Window>
